<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <jmxConfigurator />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [level=%level thread=%t %mdc] %logger{20} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <logger name="com.fabio" level="DEBUG"/>
    <logger name="org.springframework" level="DEBUG"/>
    <logger name="ttddyy" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
